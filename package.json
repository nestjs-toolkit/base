{
  "name": "@nestjs-toolkit/base",
  "version": "1.0.0",
  "description": "core helpers",
  "author": "Valmir Barbosa",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "doc": "doctoc docs --title='## Summary'",
    "commit": "git-cz",
    "release": "release-it --patch",
    "lib:build": "yarn prebuild && tsc -p tsconfig.build.json && cp package.json dist/libs"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.6",
    "@nestjs/common": "^8.4.6",
    "@nestjs/core": "^8.4.6",
    "@nestjs/graphql": "^10.0.15",
    "@nestjs/platform-express": "^8.4.6",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.6",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^13.13.52",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "5.27.1",
    "@typescript-eslint/parser": "5.27.1",
    "apollo-server-types": "^3.6.0",
    "cz-conventional-changelog": "^3.3.0",
    "doctoc": "^2.2.0",
    "eslint": "8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "fast-safe-stringify": "^2.1.1",
    "graphql": "^16.5.0",
    "jest": "28.1.1",
    "moment-timezone": "^0.5.34",
    "mongoose": "^6.3.5",
    "prettier": "^2.6.2",
    "reflect-metadata": "^0.1.13",
    "release-it": "^15.0.0",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "supertest": "^6.2.3",
    "ts-jest": "28.0.4",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@nestjs-toolkit/base/(.*)": "<rootDir>/libs/base/src/$1",
      "@nestjs-toolkit/base": "<rootDir>/libs/base/src"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "packageManager": "yarn@3.2.1"
}
